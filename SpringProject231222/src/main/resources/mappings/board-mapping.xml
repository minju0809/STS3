<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardDao">

	<resultMap id="BoardResult" type="BoardVO">

<!-- 	property 값은 VO 필드명 , column은 테이블 필드명 -->
	<id property="seq" column="seq" />
	<result property="title" column="title" />
	<result property="writer" column="writer" />
	<result property="content" column="content" />
	<result property="regdate" column="regdate" />
	<result property="cnt" column="cnt" />

	</resultMap>


	<insert id="insert_sql" parameterType="BoardVO">
		<selectKey keyProperty="seq" resultType="int" order="BEFORE">
			(select max(seq)+1 as seq from board)
		</selectKey>
		insert into board (seq, title, writer, content)
		values (#{seq},#{title},#{writer},#{content})
	</insert>

	<delete id="delete_sql" parameterType="BoardVO">
		delete from board where seq = #{seq}
	</delete>

	<update id="cnt_sql" parameterType="BoardVO">
		update board set cnt = (cnt+1) where seq = #{seq}
	</update>

	<update id="update_sql" parameterType="BoardVO">
		update board set title= #{title}, writer = #{writer}, content = #{content}
		where seq = #{seq}
	</update>

	<select id="select1_sql" parameterType="BoardVO" resultMap="BoardResult">
		select * from board where seq = #{seq}
	</select>

	<!-- Dynamis SQL 적용 전 -->
	<select id="select_sql" parameterType="BoardVO" resultType="BoardVO">
		select * from board order by seq desc
	</select>
	
	<select id="select_writer_sql" parameterType="BoardVO" resultType="BoardVO">
		select * from board where writer like '%'||#{ch2}||'%' order by seq desc
	</select>
	
	<select id="select_title_sql" parameterType="BoardVO" resultType="BoardVO">
		select * from board where title	like '%'||#{ch2}||'%' order by seq desc
	</select>
	
	<!-- Dynamis SQL 적용 후 -->
	<select id="select_ch_sql" parameterType="BoardVO" resultType="BoardVO">
		select * from board where 1=1
		<if test="ch1=='writer'">
			and writer like '%'||#{ch2}||'%'
		</if>
		<if test="ch1=='title'">
			and title like '%'||#{ch2}||'%'
		</if>
		order by seq desc
	</select>

